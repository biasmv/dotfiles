[push]
  default=tracking
  
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "diff"]
  whitespace = red reverse
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = /usr/bin/vim

[alias]
  latest=log -1
  unstage=reset HEAD
  st=status
  pl=log --oneline
  di=diff --ignore-space-at-eol
  hash=log --format="%h" -1
  rb=pull --rebase
  pick=cherry-pick
